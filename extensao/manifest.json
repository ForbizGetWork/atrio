{
    "manifest_version": 3,
    "name": "Atrio - Visualizador de Vagas (Senior Bridge)",
    "version": "1.0.1",
    "description": "Extens√£o para conectar o Visualizador de Vagas com a plataforma Senior X",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://platform.senior.com.br/*",
        "https://forbizgetwork.github.io/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://forbizgetwork.github.io/atrio/*",
                "http://localhost:*/*",
                "http://127.0.0.1:*/*"
            ],
            "js": [
                "visualizador-inject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://platform.senior.com.br/*"
            ],
            "js": [
                "token-capturer.js"
            ],
            "run_at": "document_start",
            "world": "MAIN",
            "all_frames": true
        },
        {
            "matches": [
                "https://platform.senior.com.br/*"
            ],
            "js": [
                "token-listener.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://forbizgetwork.github.io/atrio/*",
                "http://localhost:*/*",
                "http://127.0.0.1:*/*"
            ],
            "js": [
                "visualizador-inject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}